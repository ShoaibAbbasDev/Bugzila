<p class = 'h3 text-center'>
  Show Project Details
</p>
<div class="row p-5">
  <div class="col-md-6" >
    <h5>
      Name:
    </h5>
    <p>
      <%= @project.name %>
    </p>
    <h5>
      Description:
    </h5>
    <p>
      <%= @project.description %>
    </p>
    <h5>
      Status:
    </h5>
    <p>
      <%= @project.status %>
    </p>
    <h5>
      Created Date:
    </h5>
    <p>
      <%= @project.created_at %>
    </p>
  </div>
  <div class="col-md-6" >
    <h5>
      Project Manager:
    </h5>
    <% find_project_manager(@project.users).each do |record| %>
      <p>
        <%= record.name %>
      </p>
    <%end%>
    <h5>
      Total Developers:
    </h5>
    <p>
      <%= link_to find_project_developer(@project.users).count , project_project_details_path(@project.id)%>
    </p>
    <h5>
      Total QAs:
    </h5>
    <p>
      <%= link_to find_project_qa(@project.users).count , project_project_details_path(@project.id) %>
    </p>
    <h5>
      Total bugs:
    </h5>
    <p>
      <%= link_to find_project_bugs(@project), project_bugs_path(@project.id) %> Bugs
    </p>
    <h5>
      Deadline:
    </h5>
    <p class='text-danger'>
      <%= @project.due_date.strftime %>
    </p>
  </div>
</div>
<%=link_to '<- Back', projects_path, class: 'btn btn-primary btn-lg m-5'%>

